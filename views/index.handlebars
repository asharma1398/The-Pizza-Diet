<main class="container mt-5">
    <div class="header d-flex justify-content-center">
        <h1>Keep Calm and Order Pizza</h1>
    </div>

    <br> 

    <div>
        <form class="pizza-form">
            <input id="newPizza" class="form-control" type="text" placeholder="Enter Pizza Name">
            <br>
            <button type="submit" class="SubmitBtn btn-dark">Submit</button>
        </form>
    </div>
        
    <div class="row mt-5">
        <div class="col d-flex justify-content-center">
            <h2>Order Up</h2>

            <div class="row mt-5 d-flex justify-content-end">
                
                <ul>
                    {{#each pizza}}
                    {{#unless devoured}}
                    <li class="list-group-item">{{pizza_name}}<button class="devouredBtn" data-id="{{id}}">Let's Eat!</button></li>
                    {{/unless}}
                    {{/each}}
                </ul>
            </div>
        </div>

        <div class="col d-flex justify-content-center">
            <h2>Eaten</h2>
            <div class="row mt-5 d-flex justify-content-end">
                <ul>
                    {{#each pizza}}
                    {{#if devoured}}
                    <li class="list-group-item">{{pizza_name}}</li>
                    {{/if}}
                    {{/each}}
                </ul>
            </div>
        </div>
    </div>    
</main>